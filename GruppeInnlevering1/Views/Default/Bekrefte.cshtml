        <dd>
            @Html.DisplayFor(model => model.antall3)
        </dd>

        <dt>
            BilletturPris
        </dt>

        <dd id="TotalPris" name="pris">

        </dd>
        @if (Model.datoTilbake.GetHashCode() != 0)
        {
            <dt>
                BilletReturPris
            </dt>

